{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "300mb",
        "runtime": "python3.9",
        "includeFiles": [
          "app.py",
          "requirements.txt",
          "static/**",
          "templates/**",
          "*.pth",
          "*.h5",
          "*.pkl",
          "*.bin"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/app.py"
    }
  ],
  "buildCommand": "bash vercel_build.sh",
  "outputDirectory": ".vercel",
  "regions": ["iad1"],
  "functions": {
    "app.py": {
      "maxDuration": 60,
      "memory": 3008
    }
  }
}
